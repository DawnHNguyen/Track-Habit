<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="habit"
            type="com.track.trackhabit.habit.domain.entity.Habit" />

        <variable
            name="viewModel"
            type="com.track.trackhabit.habit.presentation.ui.home.SelectTimeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_fragmentAddHabit_name"
            android:text="@string/fragment_addhabit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/all_margin_start"
            android:layout_marginTop="@dimen/all_margin_top_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_fragmentAddHabit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_habit_margin_textview"
            android:layout_marginStart="@dimen/all_margin_start"
            android:layout_marginEnd="@dimen/all_margin_end"
            app:layout_constraintTop_toBottomOf="@id/textView_fragmentAddHabit_name"
            app:layout_constraintStart_toEndOf="@id/textView_fragmentAddHabit_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_fragmentAddHabit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_addhabit_habitname"
                android:text="@={viewModel.nameHabit}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
        android:id="@+id/textView_fragmentAddHabit_nameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không được để trống"
        android:textColor="#FF0000"
        android:textSize="13sp"
        android:visibility="gone"
        android:layout_marginStart="@dimen/all_margin_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout_fragmentAddHabit_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_fragmentAddHabit_description"
            android:text="@string/fragment_addhabit_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/addhabit_margin_edittext"
            android:layout_marginStart="@dimen/all_margin_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_fragmentAddHabit_name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_fragmentAddHabit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_habit_margin_textview"
            android:layout_marginStart="@dimen/all_margin_start"
            android:layout_marginEnd="@dimen/all_margin_end"
            app:layout_constraintTop_toBottomOf="@id/textView_fragmentAddHabit_description"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_fragmentAddHabit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_addhabit_habitdescription"
                android:text="@={viewModel.descriptionHabit}"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView_fragmentAddHabit_descriptionError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không được để trống"
            android:textColor="#FF0000"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/textInputLayout_fragmentAddHabit_description"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_fragmentAddHabit_description" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_fragmentAddHabit_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_addhabit_frequency"
            android:layout_marginTop="@dimen/addhabit_margin_edittext"
            android:layout_marginStart="@dimen/all_margin_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_fragmentAddHabit_description" />

        <HorizontalScrollView
            android:id="@+id/scrollView_fragmentAddHabit_daySelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_habit_margin_textview"
            android:layout_marginStart="@dimen/all_margin_start"
            android:layout_marginEnd="@dimen/all_margin_end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_fragmentAddHabit_frequency">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ToggleButton
                    android:id="@+id/toggleButton_fragmentAddHabit_checkMonday"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/addhabit_margin_dayselection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_addhabit"
                    android:textOn="@string/fragment_addhabit_monday"
                    android:textOff="@string/fragment_addhabit_monday" />

                <ToggleButton
                    android:id="@+id/toggleButton_fragmentAddHabit_checkTuesday"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/addhabit_margin_dayselection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_addhabit"
                    android:textOn="@string/fragment_addhabit_tuesday"
                    android:textOff="@string/fragment_addhabit_tuesday" />

                <ToggleButton
                    android:id="@+id/toggleButton_fragmentAddHabit_checkWednesday"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/addhabit_margin_dayselection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_addhabit"
                    android:textOn="@string/fragment_addhabit_wednesday"
                    android:textOff="@string/fragment_addhabit_wednesday" />

                <ToggleButton
                    android:id="@+id/toggleButton_fragmentAddHabit_checkThursday"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/addhabit_margin_dayselection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_addhabit"
                    android:textOn="@string/fragment_addhabit_thursday"
                    android:textOff="@string/fragment_addhabit_thursday" />

                <ToggleButton
                    android:id="@+id/toggleButton_fragmentAddHabit_checkFriday"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/addhabit_margin_dayselection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_addhabit"
                    android:textOn="@string/fragment_addhabit_friday"
                    android:textOff="@string/fragment_addhabit_friday" />

                <ToggleButton
                    android:id="@+id/toggleButton_fragmentAddHabit_checkSaturday"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/addhabit_margin_dayselection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_addhabit"
                    android:textOn="@string/fragment_addhabit_saturday"
                    android:textOff="@string/fragment_addhabit_saturday" />

                <ToggleButton
                    android:id="@+id/toggleButton_fragmentAddHabit_checkSunday"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/addhabit_margin_dayselection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_addhabit"
                    android:textOn="@string/fragment_addhabit_sunday"
                    android:textOff="@string/fragment_addhabit_sunday" />
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_fragmentAddHabit_setTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_addhabit_settime"
            android:textStyle="bold"
            android:textSize="@dimen/all_textsize_settime"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView_fragmentAddHabit_daySelection" />

        <Button
            android:id="@+id/button_fragmentAddHabit_setTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={viewModel.timeHabit}"
            android:textSize="@dimen/all_textsize_settime"
            android:layout_marginTop="@dimen/addhabit_margin_scrollview"
            android:layout_marginStart="@dimen/all_margin_start"
            app:layout_constraintStart_toEndOf="@+id/textView_fragmentAddHabit_setTime"
            app:layout_constraintTop_toBottomOf="@id/scrollView_fragmentAddHabit_daySelection"
            app:layout_constraintBaseline_toBaselineOf="@id/textView_fragmentAddHabit_setTime" />

        <Button
            android:id="@+id/button_fragmentAddHabit_buttonDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_addhabit_done"
            android:layout_margin="@dimen/all_marginall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_fragmentAddHabit_setTime" />

        <Button
            android:id="@+id/button_fragmentAddHabit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_cancel"
            android:layout_marginStart="@dimen/all_margin_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_fragmentAddHabit_buttonDone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>