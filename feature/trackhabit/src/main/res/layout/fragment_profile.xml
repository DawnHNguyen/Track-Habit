<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".presentation.ui.profile.ProfileFragment">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchButton_profile_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="20dp"
            android:text="@string/profile_language"
            android:textOff="Vie"
            android:textOn="Eng"
            android:textSize="20sp"
            android:thumb="@drawable/switch_thumb_custom"
            app:showText="true"
            app:track="@drawable/switch_track_custom"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/profile_feedback_notice"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_profile_giveFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_confirmsleeptime_button"
            android:backgroundTint="@color/background_confirmsleeptime_button_color"
            android:padding="10dp"
            android:text="@string/profile_feedback_button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_profile_logOutLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_confirmsleeptime_button"
            android:backgroundTint="@color/background_confirmsleeptime_button_color"
            android:padding="10dp"
            android:text="@string/profile_login_button"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>